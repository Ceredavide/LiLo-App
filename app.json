{
  "expo": {
    "name": "LiLo",
    "slug": "lilo_definitivo",
    "privacy": "public",
    "ios": {
      "buildNumber": "3",
      "supportsTablet": false,
      "bundleIdentifier": "com.ceredavide.liloapp",
      "config": {
        "usesNonExemptEncryption": false
      },
      "infoPlist": {
        "NSCameraUsageDescription": "This app uses the camera to take photos that can be used to be attached on an article that can be posted with the app. And also to scan qr codes and launch urls found in Qr Codes.",
        "NSPhotoLibraryUsageDescription": "This app uses the photos in the library to attach them on an article that can be posted with the app"
      }
    },
    "android": {
      "package": "com.ceredavide.liloapp",
      "versionCode": 7,
      "useNextNotificationsApi": true
    },
    "version": "3.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "splash": {
      "image": "./assets/images/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "updates": {
      "fallbackToCacheTimeout": 0
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "platforms": [
      "android",
      "ios"
    ],
    "description": "liam sucks",
    "plugins": [
      "expo-secure-store",
      "expo-asset",
     [
       "expo-font",
      {
        "fonts": [
          "./assets/fonts/OpenSans-Light.ttf",
          "./assets/fonts/OpenSans-Regular.ttf",
          "./assets/fonts/OpenSans-Bold.ttf",
          "./assets/fonts/PlayfairDisplay-SemiBold.ttf"
        ]
      }
     ]
    ]
  }
}
